{
  "name": "@tsb/maps-latent-space-server",
  "private": true,
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "start":"node lib/index.js",
    "build": "tsc -p .",
    "prebuild": "rimraf lib && mkdirp lib",
    "dev": "tsc -p . --watch",
    "nodemon": "nodemon",
    "test": "jest",
    "test:watch": "jest --watch",
    "change": "beachball change",
    "gen": "plop"
  },
  "devDependencies": {
    "@types/cors": "2.8.6",
    "@types/express": "4.17.4",
    "@types/express-ws": "3.0.0",
    "@types/jest": "25.2.1",
    "@types/johnny-five": "1.3.0",
    "@types/morgan": "1.9.0",
    "@types/node": "12.12.34",
    "@types/shortid": "0.0.29",
    "@types/ws": "7.2.1",
    "@typescript-eslint/eslint-plugin": "2.27.0",
    "@typescript-eslint/parser": "2.27.0",
    "beachball": "1.12.1",
    "cz-conventional-changelog": "3.1.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.1",
    "eslint-plugin-jest": "23.8.2",
    "eslint-plugin-prettier": "3.1.2",
    "jest": "25.2.7",
    "mkdirp": "0.5.2",
    "nodemon": "2.0.2",
    "prettier": "1.19.1",
    "rimraf": "3.0.1",
    "ts-jest": "25.3.1",
    "ts-node": "8.6.2",
    "typescript": "3.8.3"
  },
  "dependencies": {
    "@types/socket.io": "2.1.4",
    "cors": "2.8.5",
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "express-ws": "4.0.0",
    "johnny-five": "1.4.0",
    "jspack": "0.0.4",
    "meow": "6.1.0",
    "on-change": "1.6.2",
    "shortid": "2.2.15",
    "ws": "7.2.1"
  },
  "prettier": {
    "printWidth": 80
  },
  "eslintConfig": {
    "ignorePatterns": [
      "node_modules",
      "dist",
      "coverage"
    ],
    "env": {
      "jest/globals": true
    },
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "jest"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:jest/recommended"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": [
        "warn",
        {
          "args": "after-used",
          "varsIgnorePattern": "_",
          "argsIgnorePattern": "_"
        }
      ]
    }
  }
}
